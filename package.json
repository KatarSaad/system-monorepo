{
  "name": "@system/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "docker-compose up -d && cd services/api && npm run start:dev",
    "tools": "docker-compose up -d",
    "stop": "docker-compose down",
    "clean": "docker-compose down -v",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "setup": "pnpm install",
    "api:dev": "cd services/api && npm run start:dev",
    "api:setup": "cd services/api && npx prisma generate && npx prisma db push",
    "logs": "docker-compose logs -f",
    "health": "curl -f http://localhost:3001/health"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^18.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}